@model NewClimaticVM

@{
    ViewData["Title"] = "Добави продукт";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Добави Климатик</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Model" class="control-label"></label>
                                <input asp-for="Model" class="form-control" />
                                <span asp-validation-for="Model" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description"  class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price"  class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Origin" class="control-label"></label>
                                <input asp-for="Origin" class="form-control" />
                                <span asp-validation-for="Origin" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageUrl" class="control-label"></label>
                                <input asp-for="ImageUrl" class="form-control" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NoiseLevelInside" class="control-label"></label>
                                <input asp-for="NoiseLevelInside" class="form-control" />
                                <span asp-validation-for="NoiseLevelInside" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NoiseLevelOutside" class="control-label"></label>
                                <input asp-for="NoiseLevelOutside" class="form-control" />
                                <span asp-validation-for="NoiseLevelOutside" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CoolAgent" class="control-label"></label>
                                <input asp-for="CoolAgent" class="form-control" />
                                <span asp-validation-for="CoolAgent" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CoolingKWPower" class="control-label"></label>
                                <input asp-for="CoolingKWPower" class="form-control" />
                                <span asp-validation-for="CoolingKWPower" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="HeatingKWPower" class="control-label"></label>
                                <input asp-for="HeatingKWPower" class="form-control" />
                                <span asp-validation-for="HeatingKWPower" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Waranty" class="control-label"></label>
                                <input asp-for="Waranty" class="form-control" />
                                <span asp-validation-for="Waranty" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="BrandId" class="control-label"></label>
                                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands">
                                    <option value="">Избери</option>
                                </select>
                                <span asp-validation-for="BrandId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId" class="control-label"></label>
                                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                                    <option value="">Избери</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BtuPowerId" class="control-label"></label>
                                <select asp-for="BtuPowerId" class="form-control" asp-items="ViewBag.BtuPowers">
                                    <option value="">Избери</option>
                                </select>
                                <span asp-validation-for="BtuPowerId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EnergyClassCoolingId" class="control-label"></label>
                                <select asp-for="EnergyClassCoolingId" class="form-control" asp-items="ViewBag.EnergyClassCoolings">
                                    <option value="">Избери</option>
                                </select>
                                <span asp-validation-for="EnergyClassCoolingId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EnergyClassHeatingId" class="control-label"></label>
                                <select asp-for="EnergyClassHeatingId" class="form-control" asp-items="ViewBag.EnergyClassHeatings">
                                    <option value="">Избери</option>
                                </select>
                                <span asp-validation-for="EnergyClassHeatingId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RoomSizeId" class="control-label"></label>
                                <select asp-for="RoomSizeId" class="form-control" asp-items="ViewBag.RoomSizes">
                                    <option value="">Избери</option>
                                </select>
                                <span asp-validation-for="RoomSizeId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Добави" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Виж всички</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        $("#ImageUrl").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}